.persion_info{
  width: 750rpx;
  height: 456rpx;
  background: #305c5c;
  box-sizing: border-box;
  padding-top: 84rpx;
  text-align: center;
  color: #fff;
  line-height: 1;
}

.persion_name{
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.persion_tip{
  font-size: 30rpx;
  color: #ff9393;
}

.check_box{
  display: flex;
  margin-top: 64rpx;
  justify-content: space-between;
}

.persion_info .avatar_img{
  display: block;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin:0 auto;
  margin-bottom: 32rpx;
}

.checkBtn{
  width: 267rpx;
  height: 62rpx;
  border-radius: 31rpx;
  cursor: pointer;
  outline: none;
  outline-color: transparent;
  color:#fff;
  text-align: center;
  line-height: 62rpx;
  margin:0 auto;
  background: -webkit-linear-gradient(-90deg, #10ca98 0, #0ba178 100%);
  background: linear-gradient(180deg, #10ca98 0, #0ba178 100%);
  background-position: 50% 50%;
  -webkit-box-shadow: 0 1px 8px 2px rgba(0,0,0,0.4);
}

.checkedBtn{
  width: 267rpx;
  height: 62rpx;
  border-radius: 31rpx;
  cursor: pointer;
  outline: none;
  outline-color: transparent;
  color:#fff;
  text-align: center;
  line-height: 62rpx;
  margin:0 auto;
  background: -webkit-linear-gradient(-90deg, #ebebeb 0, rgba(173,173,173,1) 100%);
  background: linear-gradient(180deg, #ebebeb 0, rgba(173,173,173,1) 100%);
  background-position: 50% 50%;
  -webkit-box-shadow: 0 1px 8px 2px rgba(0,0,0,0.4);
}

.formSubmit{
  display: block;
  margin-top: -31rpx;
}

.gold_store{
  width: 70rpx;
  height: 70rpx;
  background: -webkit-linear-gradient(-90deg, #10ca98 0, #0ba178 100%);
  background: linear-gradient(180deg, #10ca98 0, #0ba178 100%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 30rpx;
  margin-top: -30rpx;
}

.gold_store image{
  display: block;
  width: 44rpx;
  height: 42rpx;
}

.check_box_left{
  flex: 1;
  text-align: center;
}

.check_box_left view:nth-of-type(2){
  color: #959595;
}

.check_box_right view:nth-of-type(2){
  color: #959595;
}

.calendar_box{
  width: 650rpx;
  margin:0 auto;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding:0 40rpx;
  margin-bottom: 150rpx;
  background: -webkit-linear-gradient(-90deg, #10ca98 0, #0ba178 100%);
  background: linear-gradient(180deg, #10ca98 0, #0ba178 100%);
  background-position: 50% 50%;
  -webkit-box-shadow: 0 1px 8px 2px rgba(0,0,0,0.1);
}



.check_box_right{
  flex: 1;
  text-align: center;
}


.time {
  padding: 24rpx 20rpx;
  text-align: right;
  width: 650rpx;
}

.time text {
  font-size: 36rpx;
}

.weekName {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 16rpx 0;
  box-sizing: border-box;
}

.weekName view {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #bef29c;
  text-align: center;
}

.week {
  width: 100%;
  box-sizing: border-box;
}

.week view {
  /*width: 14.2%;*/
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  margin: 10rpx 0;
  text-align: center;
}

.week view text {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.week .checked {
  color:#365742;
  background-size: 100% 100%;
  background-image:url('data:image/png;base64,');
}

.userSign {
  margin: 40rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  padding: 60rpx 20rpx;
}

.userAvatar {
  display: inline-block;
  vertical-align: top;
  width: 160rpx;
  height: 160rpx;
  margin-right: 40rpx;
}

.userAvatar image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.userSignInfo {
  vertical-align: top;
  display: inline-block;
  line-height: 160rpx;
}

.nickname {
  margin-right: 40rpx;
}

.coinsNum {
  padding: 100rpx 0 60rpx;
  text-align: center;
}

.coinsNum image {
  vertical-align: top;
  width: 72rpx;
  height: 84rpx;
  margin-right: 20rpx;
}

.coinsNum view {
  display: inline-block;
  line-height: 84rpx;
}
