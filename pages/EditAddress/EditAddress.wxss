/* pages/EditAddress/EditAddress.wxss */
page{
	background: #f2f2f2;
}

view{
	box-sizing: border-box;
}


.content{
	width: 100%;
	background: #fff;
}

.content .item{
	display: flex;
	padding:0 40rpx;
	position: relative;
	align-items: center;
	height: 90rpx;
	width: 100%;
	background: #fff;
}

.content .item image{
	display: block;
	width: 40rpx;
	height: 40rpx;
	flex-shrink: 0;
	margin-right: 14rpx;
}

.content .item view{
	flex-shrink: 0;
	font-size: 30rpx;
	width: 150rpx;
}

.content .item input{
	width: 100%;
	height: 100%;
	display: block;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	padding:0 20rpx;
}

.sure_address{
	width: 700rpx;
	height: 90rpx;
	background: #086347;
	text-align: center;
	line-height: 90rpx;
	color: #fff;
	font-size: 30rpx;
	margin:50rpx auto;
	border-radius: 6rpx;
}

.address_picker{
	display: flex;
}

.address_picker picker{
	flex: 1;
	min-width: 160rpx;
	/*border:1px solid red;*/
}

.address_picker .picker{
	display: inline-block;
}
