/*自定义复制微信号弹窗*/
.teach_info{
  width: 750rpx;
  height: 100%;
  left: 0;
  top: 0;
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}

.teach_info_in{
  width: 560rpx;
  height: 440rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-radius: 8rpx;
}

.title{
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  padding: 10rpx;
}

.title_tip{
  font-size: 32rpx;
  text-align: center;
}

.list{
  font-size: 30rpx;
  color: #999;
  text-indent: 96rpx;
  box-sizing: border-box;
  padding:8rpx 0;
}

.opation_box{
  display: flex;
  width: 100%;

}

.opation_box view{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  border-top: 1px solid #999;
  box-sizing: border-box;
  padding:20rpx 20rpx;
}

.opation_box view:nth-of-type(1){
  border-right: 1px solid #999;
}

.opation_box view:nth-of-type(2){
  color: #48c23d;
}

.teach_id{
  text-align: center;
}
