/* pages/moreVideo/moreVideo.wxss */
view{
    box-sizing: border-box;
}

.banner{
    width: 750rpx;
    height: 430rpx;
    background-size: 100% 100%;
    margin-bottom: 20rpx;
}

/* 导航 */
.video-nav{
    width: 750rpx;
    height: 90rpx;
    display: flex;
    background-color: #227b68;
    padding:0 20rpx;
    align-items: center;
}

.video-nav .item{
    color: #fff;
    font-size: 26rpx;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border:1px solid transparent;
}

.video-nav .item.active{
    border:1px solid #fff;
    border-radius: 4rpx;
    text-align: center;
}


.video-list .cover-view{
    width: 750rpx;
    height: 424rpx;
    position: relative;
}

.video-list .video-item{
    margin-bottom: 20rpx;
}

.video-list .cover-view .cover{
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.video-list .cover-view .play-btn{
    width: 90rpx;
    height: 77rpx;
    position: absolute;
    z-index: 2;
    left: 50%;
    bottom: 60rpx;
    transform: translateX(-50%);
    background-image: url('https://qncdn.playonwechat.com/hepulanhufu/video-play-icon.png');
    background-size: 100% 100%;
}

.video-list video{
    display: block;
    width: 750rpx;
    height: 424rpx;
}