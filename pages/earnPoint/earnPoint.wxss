/* pages/earnPoint/earnPoint.wxss */
page{
	background-image: url(https://qncdn.playonwechat.com/hepulan/earn_point_bg.png);
	background-size: 100% 472rpx;
	background-position: 0 0;
	background-repeat: no-repeat;
	box-sizing: border-box;
	padding-top: 472rpx;
}

.deairy image{
	display: block;
	width: 104rpx;
	height: 104rpx;
	margin-right: 30rpx;
}

.deairy{
	width: 690rpx;
	height: 208rpx;
	display: flex;
	/*box-shadow: 0 0 8rpx rgba(0,0,0,.1);*/
	margin:0 auto;
	align-items: center;
	padding:0 30rpx;
	border:1px solid #f7f7f7;
	box-sizing: border-box;
}

.deairy_right{
	position: relative;
	flex:1;
}

.deairy_right view:nth-of-type(1){
	font-size: 30rpx;
	margin-bottom: 26rpx;
}

.deairy_right view:nth-of-type(2){
	font-size: 26rpx;
	color: #666;
}

.tip{
	font-size: 30rpx;
	color: #666;
	position: absolute;
	right: 0rpx;
	top: 0rpx;
}