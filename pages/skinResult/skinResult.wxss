/* pages/skinResult/skinResult.wxss */
@import "../template/template.wxss";
.nav{
	width: 100%;
	height: 386rpx;
	background-image: url(https://qncdn.playonwechat.com/hepulan/skin_test_result_bg.png);
	background-size: 100% 100%;
}

view{
	box-sizing: border-box;
}

.nav .titlee{
	position: relative;
	text-align: center;
	font-size: 25rpx;
	padding-top: 80rpx;
	margin-bottom: 30rpx;
}

.nav .titlee:before{
	content: "";
	display: block;
	width: 68rpx;
	height: 2px;
	background:#58b17e;
	position: absolute;
	left: 50%;
	bottom: -20rpx;
	transform: translateX(-50%);
}

.tag_list{
	display: flex;
	justify-content: center;
}

.tag_item{
	margin:0 20rpx;
}

.tag_item view:nth-of-type(1){
	width: 60rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	font-size: 30rpx;
	border-radius: 4rpx;
	margin:20rpx auto;
}

.tag_item view:nth-of-type(2){
	font-size: 30rpx;
	text-align: center;
}


/*内容区*/
.header{
    display: flex;
    align-items: center;
    font-size: 30rpx;
    width: 100%;
    padding:20rpx;
    position: relative;
    box-sizing: border-box;
}

.header:after{
	content: "";
	display: block;
	width: 100%;
	position: absolute;
	left: 0;
	bottom: 0;
	border-bottom: 1px solid #efefef;
	transform: scaleY(.5);
}

.header:before{
	content: '';
	color: #58b17e;
	  position: absolute;
	  right: 20px;
	  width: 10px;
	  height: 10px;
	  border-top: solid 1px currentColor;
	  border-right: solid 1px currentColor;
	  -webkit-transform: rotate(45deg);
	          transform: rotate(45deg);
}

.header .help{
	background:url(https://qncdn.playonwechat.com/hepulan/skin_test_result_help.png);
	display: block;
	width: 38rpx;
	height: 38rpx;
	background-size: 100%; 
	margin-right: 10rpx;
}

.content{
	font-size: 28rpx;
	padding: 20rpx 30rpx;
	line-height: 50rpx;
	border-bottom: 30rpx solid #f7f7f7;
}