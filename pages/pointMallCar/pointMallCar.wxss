/* pages/pointMallCar/pointMallCar.wxss */
.list_item image{
    display: block;
    width: 244rpx;
    height: 162rpx;
    border-radius: 8rpx;
    margin-right: 20rpx;
}

.list_out{
	height: 214rpx;
	z-index: 2;
	position: relative;
}

.list_item{
	width: 100%;
	height: 212rpx;
	display: flex;
	padding:20rpx;
	box-sizing: border-box;
	align-items: center;
	border-bottom: 20rpx solid #f7f7f7;
	position: absolute;
	z-index: 2;
	background:#fff;
}

.list_item:last-of-type{
	margin-bottom: 150rpx;
}

.list_item,.delete{
	position: absolute;
}

.delete{
	width: 150rpx;
	height: 190rpx;
	background:red;
	line-height: 214rpx;
	text-align: center;
	color: #fff;
	font-size: 30rpx;
	right: 0;
	top: 0;
	z-index: 1;
}

.item_right{
	display: flex;
	flex: 1;
	height: 100%;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
}

.list .item_title{
	font-size: 30rpx;
	margin-bottom: 34rpx;
	white-space: nowrap;
	text-overflow: hidden;
	overflow: hidden;
}

.list .item_price{
	color:#004724;
	font-size: 24rpx;
}

.goods_num{
	display: flex;
}

.goods_num view{
	display: flex;
	justify-content: center;
	align-items: center;
	width: 50rpx;
	height: 50rpx;
	line-height: 50rpx;
}

.list .item_type{
	width: 100%;
	line-height: 50rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.list .item_color{
	font-size: 24rpx;
}

.goods_num view:nth-of-type(1){
	border:1px solid #dfdfdf;
	font-size: 20px;
	border-radius: 4rpx 0 0 4rpx;
	display: flex;
	justify-content: center;
	/*align-items: center;*/
	line-height: 40rpx;
}

.goods_num view:nth-of-type(2){
	border:1px solid #dfdfdf;
	border-left: 0;
	border-right: 0;
	font-size: 24rpx;
	border-radius: 4rpx 0 0 4rpx;
}

.goods_num view:nth-of-type(3){
	border:1px solid #dfdfdf;
	font-size: 20px;
	border-radius: 0 4rpx 4rpx 0;
	display: flex;
	justify-content: center;
	line-height: 40rpx;
	/*align-items: center;*/
}

.nothing-icon{
	width: 380rpx;
	display: block;
	margin:200rpx auto 100rpx auto;
}

.to-shop{
	width: 200rpx;
	height: 80rpx;
	font-size: 28rpx;
	text-align: center;
	color: #086446;
	margin: 0 auto;
}

/*购物车*/
.bottom_nav{
	width:100%;
	height: 118rpx;
	background:#fff;
	border-top: 1px solid #f7f7f7;
	position: fixed;
	bottom: 0;
	left: 0;
	display: flex;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
	padding-left:20rpx;
	font-size: 30rpx;
	z-index: 20;
}

.bottom_nav .cart_right{
	display: flex;
	align-items: center;
}

.bottom_nav .cart_right .settle{
	background: #086446;
	height: 118rpx;
	color: #fff;
	line-height: 118rpx;
	font-size: 30rpx;
	width: 238rpx;
	text-align: center;
	margin-left: 20rpx;
}

.bottom_nav .cart_right .settle text{
	font-size: 24rpx;
}

/* 选择款 */
.select_win{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
  z-index: 30;
}

.product_info{
  width: 100%;
  height: 680rpx;
  background: #fff;
  padding-top: 40rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product image{
  display: block;
  width: 240rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.product{
  display: flex;

}

.top_info{
  padding:0 30rpx;
  box-sizing: border-box;
}

.product .info view:nth-of-type(1){
   font-size: 30rpx;
   color: #48a86c;
   margin-bottom: 14rpx;
}

.product .info view:nth-of-type(2){
   font-size: 30rpx;
   margin-bottom: 14rpx;
}

.product .info view:nth-of-type(3){
   font-size: 30rpx;
}

.type_tag{
  display: block;
  font-size: 32rpx;
  padding:20rpx 0;
  width: 750rpx;
}

.product_type .type_item{
  width: 194rpx;
  height: 48rpx;
  border:1px solid #efefef;
  font-size: 24rpx;
  text-align: center;
  line-height: 48rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.product_type .type_item.type_active{
  border:1px solid #48a86c;
}

.product_type{
  display: flex;
  width: 750rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.sure_type{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background: #48a86c;
  color: #fff;
}


.close_select{
  color: #000;
  position: absolute;
  margin-top: 0;
  margin-left: 0;
  right: 40rpx;
  top: 40rpx;
  width: 21px;
  height: 21px;
}

.close_select:before {
  content: '';
  position: absolute;
  top: 10px;
  width: 21px;
  height: 1px;
  background-color: currentColor;
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
}
.close_select:after {
  content: '';
  position: absolute;
  top: 10px;
  width: 21px;
  height: 1px;
  background-color: currentColor;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
