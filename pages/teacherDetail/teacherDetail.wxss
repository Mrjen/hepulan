/* pages/teacherDetail/teacherDetail.wxss */
.container{

}

view{
    box-sizing: border-box;
}

button{
    padding:0;
    margin:0;
}

button::after{
    display: none;
}

.teacher-view{
    width: 750rpx;
    height: 548rpx;
    position: relative;
}

.teach-image{
    display: block;
    width: 100%;
    height: 100%;
    background: #eee;
    position: absolute;
}

.btn{
    width: 134rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 22rpx;
    color: #fff;
    background: #333;
    position: absolute;
}

.prew{
    bottom: 40rpx;
    right: 20rpx;
}

.contact{
    bottom: 110rpx;
    right: 20rpx;
}

/* 老师经历 */
.experice{
  padding: 20rpx 0 50rpx 0;
}

.experice .item{
    display: flex;
}

.experice .year{
    width: 200rpx;
    font-size: 26rpx;
    color: #333;
    text-align: right;
    padding-right: 20rpx;
    border-right:1px solid #999;
    position: relative;
    padding-top: 10rpx;
}

.experice .year::after{
    content: '';
    display: block;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: #006d4a;
    position: absolute;
    right: -10rpx;
    top: 20rpx;
    z-index: 1;
}

.experice .year::before{
    content: '';
    display: block;
    width: 7rpx;
    height: 7rpx;
    border-radius: 50%;
    background: #fff;
    position: absolute;
    right: -3rpx;
    top: 28rpx;
    z-index: 2;
}

.experice .content{
    font-size: 24rpx;
    margin-bottom: 30rpx;
    line-height: 1.5;
    padding:20rpx 0 0 40rpx;
    flex:1;
}

.experice .item-image{
    width: 388rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding-left: 40rpx;
}

.experice .video-option{
    width: 388rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
    position: absolute;
}

.experice .video-option .video-cover{
    width: 100%;
    height: 100%;
    position: absolute;
}

.experice .item-image image{
    display: block;
    width: 100%;
}

.introduct .video{
    width: 388rpx;
    height: 200rpx;
    position: relative;
}

.introduct .video video{
    width: 388rpx;
    height: 200rpx;
    position: absolute;
    margin-left: 40rpx;
}

.annex{
    margin-left: 40rpx;
}