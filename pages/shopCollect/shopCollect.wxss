/*商品列表*/
.shop_list{
  background: #fff;
}

.item_img{
  width: 242rpx;
  height: 154rpx;
  display: block;
  border-radius: 12rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.list_item{
  display: flex;
  padding:20rpx;
  position: relative;
}

.list_item::before{
  content: " ";
  display: block;
  width: 100%;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  transform: scaleY(.5);
  transform-origin: 0 0;
}

.item_title{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.item_jifen{
  font-size: 28rpx;
  color: #268348;
  width: 200rpx;
  margin-bottom: 20rpx;
}

.item_zan{
  font-size: 26rpx;
  color: #3e3e3e;
  align-self: flex-end;
  display: flex;
  align-items: center;
}

.zan_icon{
  display: block;
  width: 26rpx;
  height: 23rpx;
  background: url(https://qncdn.playonwechat.com/hepulan/point_mall_hert.png);
  background-size: 100% 100%;
  margin-left: 10rpx;
}

.item_info{
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 438rpx;
}

.item_bottom{
  display: flex;
  justify-content: space-between;
}

.exchange_num{
  font-size: 26rpx;
  color: #434343;
  margin-bottom: 10rpx;
  text-align: center;
}

.zan_hert{
  display: block;
  width: 48rpx;
  height: 48rpx;
  background: #ff8400;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 20rpx;
}

.zan_hert image{
  width: 27rpx;
  height: 24rpx;
}

.exchange_btn{
  width: 150rpx;
  height: 48rpx;
  border-radius: 30rpx;
  background: #ff3c3c;
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #fff;
}

