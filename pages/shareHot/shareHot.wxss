
.container{
  width: 750rpx;
  color: #fff;
  padding:0;
  margin:0;
  font-size: 22rpx;
  justify-content: flex-start;
  background: #fff;
}

.persion_img image{
  display: block;
  width:200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin:70rpx auto 30rpx auto;
  background: #0ca87d;
}

.persion_name{
  margin-bottom: 14rpx;
  font-size: 34rpx;
  color: #333;
}

.persion_coins{
  font-size: 28rpx;
  color: #333;
}

.person_action{
  width: 80%;
  height: 350rpx;
  background: url(https://hepulan.playonwechat.com/static/sharePoster/hot.jpg) no-repeat;  
  background-size: 100%;
  margin-top: 60rpx;
}

.yaoBtn{
  width: 268rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 32rpx;
  color: #fff;
  margin:40rpx auto 32rpx auto; 
  background: -webkit-linear-gradient(-90deg, #10ca98 0, #0ba178 100%);
  background: linear-gradient(180deg, #10ca98 0, #0ba178 100%);
  background-position: 50% 50%;
  -webkit-box-shadow: 0 1px 8px 2px rgba(0,0,0,0.4);
}

.share_tip{
  margin-bottom: 4rpx;
  font-size: 24rpx;
  padding: 0 120rpx;
  box-sizing: border-box;
  text-align: left;
  line-height: 50rpx;
  color: #666;
}

.share_tip2{
  font-size:34rpx;
  color:#10ca98;
  margin-top:40rpx;
}
