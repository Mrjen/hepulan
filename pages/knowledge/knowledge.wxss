/* pages/knowledge/knowledge.wxss */
.container{
	padding: 0;
	margin: 0;
	line-height: 1;
	font-size: 30rpx;
	box-sizing: border-box;
	color: #333;
	background:#f9f9f9;
	overflow: hidden;
}

.home_nav{
	width: 100%;
	height: 88rpx;
	background:#086437;
	box-sizing: border-box;
	padding: 18rpx 26rpx 0 40rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 9999;
}

.logo image{
	width: 93rpx;
	height: 52rpx;
}

.search_box input{
	width: 456rpx;
	height: 56rpx;
	background: #fff;
	border-radius: 10rpx;
	box-sizing: border-box;
	padding: 4rpx 8rpx;
	background-image:url('data:image/png;base64,');
	background-repeat: no-repeat;
	background-position: 410rpx center;
	background-size: 24rpx;
}

.home_mine image{
	width: 48rpx;
	height:45rpx;
}

.back_nav{
	width: 100%;
	height: 60rpx;
    position: fixed;
    font-size: 30rpx;
    top: 88rpx;
    left: 0;
    z-index: 9999;
    text-align: center;
    line-height: 60rpx;
    background:#fff;
    box-shadow:2px 2px 5px #eee;

}

.back_nav .back_btn{
	width: 17rpx;
	height: 60rpx;
	padding-left: 32rpx;
	display: inline-block;
	background-image:url('data:image/png;base64,');
	background-size: 17rpx 31rpx;
	background-repeat: no-repeat;
	background-position: center;
	border:none;
	position: absolute;
	left: 0;
	border-color: transparent;
	background-color: transparent;
}

.back_nav .back_btn image{
	display: block;
	width: 17rpx;
	height: 31rpx;
	margin: 0 auto;
}

/*搜索导航*/
.search_nav{
	width: 100%;
	height: 154rpx;
	position: relative;
	margin-bottom: 30rpx;
	background:#fff;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.search_nav:before {
  content: "";
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  border-bottom: 1px solid #ddd;
  -webkit-transform: scaleY(.5);
  -webkit-transform-origin: 0 0;
  pointer-events: none;
}

.search_nav .search_nav_search{
  display: flex;
	justify-content: center;
	padding: 15rpx 0 15rpx 0;
	box-sizing: border-box;
}

.search_nav input{
	display: block;
	width: 470rpx;
	height: 60rpx;
	font-size: 28rpx;
	border:1px solid #0eb691;
	border-radius: 10rpx 0 0 10rpx;
	box-sizing: border-box;
	padding:4rpx 8rpx;
}

.search_nav  .search_nav_btn{
	width: 62rpx;
	height: 60rpx;
	background: #0eb691;
	border-radius: 0 10rpx 10rpx 0;
	display: flex;
	align-items: center;
}

.search_nav  .search_nav_btn image{
	display: block;
	width: 26rpx;
	height: 25rpx;
	margin:0 auto;
}

.search_world{
	height: 54rpx;
	display: flex;
  flex-direction: column;
	justify-content: flex-end;
	box-sizing: border-box;
	padding:0 30rpx;
}

.search_world .search_item{
	box-sizing: border-box;
	padding: 8rpx 0;
	width: 130rpx;
	height: 50rpx;
	color: #999;
	text-align: center;
	display: inline-block;
}

.search_world .click_btn{
	color: #0eb691;
	border-bottom: 1px solid  #0eb691;
}

::-webkit-input-placeholder {
  color: #c7c6c6;
}

.logo{
  width: 100rpx;
  height: 64rpx;
  margin-right: 24rpx;
}

/*主体内容*/
.scroll_main{
	width: 100%;
    box-sizing: border-box;
}

.main_content{
	width: 100%;
	overflow: hidden;
	box-sizing: border-box;
	padding:28rpx 0;
	background:#fff;
	margin-bottom: 30rpx;
	box-shadow:2px 2px 5px #eee;
}

.content_text{
	line-height: 1.5;
	box-sizing: border-box;
	padding: 0 28rpx 14rpx 28rpx;
}

.content_video{
	width: 100%;
	height: 422rpx;
}

.video_poster_box{
	position: relative;
	z-index: 3;
	width: 750rpx;
	height: 422rpx;
}

.video_poster_box .video_poster{
	position: absolute;
	overflow: hidden;
	z-index: 2;
	width: 100%;
	height: 422rpx;
	box-sizing: border-box;
}

.video_poster_box .play_btn_box{
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: rgba(0,0,0,.3);
}

.video_poster_box .play_btn{
	width: 110rpx;
	height: 110rpx;
	display: block;
	position: absolute;
}


.video_src {
	width: 750rpx;
	height: 422rpx;
}
.image_src {
	width: 750rpx;
	height: 422rpx;
}



.content_video video{
	display: block;
	width: 100%;
	padding: 20rpx 0;
	box-sizing: border-box;
}
.content_video.true {
	display: block
}

.teach_info{
	display: flex;
  flex-direction: column;
	justify-content: space-between;
	position: relative;
	box-sizing: border-box;
	padding:20rpx 28rpx 0rpx 28rpx;
	border-bottom: 30rpx solid #f9f9f9;
}

.teach_info:before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  border-bottom: 1px solid #ddd;
  -webkit-transform: scaleY(.5);
  -webkit-transform-origin: 0 0;
  pointer-events: none;
}

.teach_info .teach_img{
	width: 74rpx;
	height: 74rpx;
	border-radius: 50%;
	display: block;
	margin-right: 24rpx;
	flex-shrink: 0;
}

.teach_info .teach_info_in{
	display: flex;
}

.teach_info .teach_info_in .teach_name{
	font-size: 30rpx;
	position: relative;
	color: #999;
	height: 60rpx;
	display: flex;
	align-items: center;
	line-height: 26rpx;
}

.title_time{
	display:block;
	margin-left: 30rpx;
	box-sizing: border-box;
	padding-left: 20rpx;
	line-height: 18rpx;
	margin-top: -18rpx;
	position: relative;
}

.title_time::before{
	display: block;
	content: "";
	height: 30rpx;
	width: 1px;
	background: #ddd;
	position: absolute;
	left: 0;
	margin-top: -5rpx;
	top: 50%;
}

.teach_info .teach_info_in .teach_tip{
	font-size: 34rpx;
	line-height: 40rpx;
	color: #333;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

.teach_info .teach_tag{
	font-size: 24rpx;
	line-height: 40rpx;
	color: #888;
}

.content_img{
	display: flex;
	box-sizing: border-box;
}

.content_img image{
	width: 750rpx;
	height: 422rpx;
	display: block;
}

.content_img image:nth-of-type(3n){
	margin-right: 0;
}

.content_item {
	margin-bottom: 30rpx;
	box-sizing: border-box;
}

.kefu{
	position: fixed;
	top: 500rpx;
	left: 0;
}

.psoterhide{
	display: none;
}

.image_box {
	position: relative;
}
.image_box .video_btn {
	position: absolute;
	z-index: 3;
	bottom: 30rpx;
	left: 30rpx;
	width: 120rpx;
	height: 120rpx;
}





.page_views{
	display: flex;
	color: #999;
	width: 100%;
	justify-content: flex-start;
	padding: 26rpx 20rpx;
	margin-top: 20rpx;
	box-sizing: border-box;
	position: relative;
}

.page_views::before{
	content: "";
	display: block;
	width: 100%;
	left: 0;
	top: 0;
	right: 0;
	position: absolute;
	border-top:1px solid #ddd;
	transform: scaleY(.5);
	pointer-events: none;
	transform-origin: 0 0;
}


.page_views view{
	font-size: 28rpx;
	position: relative;
	display: flex;
	align-items: center;
}

.page_views .like_btn{
	content: "";
	display: inline-block;
	width: 32rpx;
	height: 26rpx;
	background-image: url(https://hepulan.playonwechat.com/static/icon/home_icon_zan.png);
	background-size: 32rpx 26rpx;
	margin-right: 16rpx;
	background-repeat: no-repeat;
}


.page_views .has_like_btn{
	content: "";
	display: inline-block;
	width: 32rpx;
	height: 26rpx;
	background-image: url(https://hepulan.playonwechat.com/static/icon/home_icon_haszan.png);
	background-size: 32rpx 26rpx;
	margin-right: 16rpx;
}

.page_views .title_view,.page_views .like_box{
	 min-width: 150rpx;
}

.page_views .title_view::before{
	content: "";
	display: inline-block;
	width: 32rpx;
	height: 26rpx;
	background-image: url(https://hepulan.playonwechat.com/static/icon/home_icon_view.png);
	background-size: 32rpx 26rpx;
	margin-right: 16rpx;
}