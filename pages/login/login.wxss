/* pages/login/login.wxss */
.container{
	padding:0;
	margin:0;
	position: absolute;
	justify-content:initial;
	width: 100%;
	height: 100%;
	background: #eee;
}

.logo{
	width:180rpx;
	height:180rpx;
	background: #fff;
	border-radius: 50%;
	background: #086434;
	margin: 170rpx 0 30rpx 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.logo image{
	display:block;
	width:126rpx;
	height:72rpx;
}

.comp_name{
	display: block;
	text-align: center;
}

.login_box input:nth-of-type(1){
	width: 580rpx;
	height: 80rpx;
	font-size: 36rpx;
	border-radius: 4rpx;
	box-sizing: border-box;
	padding: 4rpx 30rpx;
	background: #fff;
	margin:0 0 30rpx 0;
}

.login_box input:nth-of-type(2){
	width: 300rpx;
	height: 80rpx;
	font-size: 36rpx;
	border-radius: 4rpx;
	box-sizing: border-box;
	padding: 4rpx 30rpx;
	background: #fff;
	margin-right: 30rpx;
	display: inline-block;
	vertical-align: top;
}

.yanCdoe{
	display: inline-block;
	width: 250rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	background: #086434;
	color: #fff;
	font-size: 36rpx;
	border-radius: 4rpx;
	position: relative;
}

.yanCdoe span:nth-of-type(1){
	display: block;
	width: 250rpx;
	height: 80rpx;
	font-size: 30rpx;
	line-height: 80rpx;
	text-align: center;
	background: #086434;
	color: #fff;
	position: absolute;
	z-index: 2;
	border-radius: 4rpx;
}

.yanCdoe span:nth-of-type(2){
	display: block;
	width: 250rpx;
	height: 80rpx;
	font-size: 30rpx;
	line-height: 80rpx;
	text-align: center;
	background: #086434;
	color: #fff;
	position: absolute;
	z-index: 1;
	border-radius: 4rpx;
}

.submit_btn{
	margin-top: 30rpx;
	background: #086434;
	color: #fff;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 4rpx;
}

.addGoldImg{
	position: fixed;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	box-sizing: border-box;
	display: flex;
	justify-content: center;
	align-items: center;
	z-index: 10;
}

.addGoldImg image{
	 display: block;
	 width: 508rpx;
	 height: 507rpx;
}

.preloadImg{
	width: 1px;
	height: 1px;
	opacity: 0;
	overflow: hidden;
}

.mobiel_tip{
  font-size: 26rpx;
  color: #999;
  text-align: left;
  width: 580rpx;
  margin:50rpx auto 10rpx auto;
}

.mobiel_tip{
	margin:10rpx 0;
}

.birthday{
	width: 580rpx;
	height: 80rpx;
	background: #fff;
	line-height: 80rpx;
}