/* pages/goldsote1/goldstore1.wxss */
.container{
    padding: 0;
    margin: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    text-align: center;
}

.swiper{
    width: 750rpx;
    height: 100%;
}

.productIm{
  width: 338rpx;
  height: 466rpx;
  margin:0 auto;
}

.shop_img{
    width: 338rpx;
    height: 466rpx;
    margin: 150rpx auto 40rpx auto;
}

.shop_img image{
    width: 338rpx;
    height: 466rpx;
    margin:0 auto;
}

.shop_title {
    font-size: 34rpx;
    line-height: 40rpx;
    box-sizing: border-box;
    padding:0 40rpx;
}

.shop_tip{
    font-size: 30rpx;
    margin-bottom: 50rpx;
}

.shop_price{
    font-size: 74rpx;
    color: #ce4141;
}

.shop_gold{
    font-size: 40rpx;
    color: #ce4141;
    margin-bottom: 80rpx;
}

.mine_coins{
  font-size: 20rpx;
  margin-bottom: 30rpx;
  margin-top: 50rpx;
}

.exchenge_btn{
    width: 278rpx;
    height: 64rpx;
    border-radius: 32rpx;
    line-height: 64rpx;
    text-align: center;
    color: #fff;
    margin: 0 auto;
    background: -webkit-linear-gradient(-90deg, #10ca98 0, #0ba178 100%);
    background: linear-gradient(180deg, #10ca98 0, #0ba178 100%);
    background-position: 50% 50%;
    -webkit-box-shadow: 0 0 4px 4px rgba(16, 203, 153, 0.3) ;
    box-shadow: 0 0 4px 4px rgba(16, 203, 153, 0.3) ;
}

.hot_btn{
  color: #10ca98;
  font-size:34rpx;
  margin-top:30rpx;
}

.img_pre{
  width: 70rpx;
  height: 110rpx;
  box-sizing: border-box;
  padding:55rpx 0;
  position: fixed;
  top: 310rpx;
  left: 30rpx;
  background-image:url('data:image/png;base64,');
  background-size: 29rpx 49rpx;
  background-repeat: no-repeat;
  background-position: center center;
}

.img_next{
  width: 70rpx;
  height: 110rpx;
  box-sizing: border-box;
  padding:55rpx 0;
  position: fixed;
  top: 310rpx;
  right: 30rpx;
  background-image:url('data:image/png;base64,');
  background-size: 29rpx 49rpx;
  background-repeat: no-repeat;
  background-position: center center;
}

.dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #11c795;
  border-radius: 50%;
  transition: all .6s;
  opacity: .5;
}
.dots .dot.active{
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #11c795;
  opacity: 1;
}

.dots{
    position: absolute;
    top: 80rpx;
    height: 32rpx;
    display: flex;
    margin:0 auto;
    align-items: center;
    left: 50%;
    transform: translateX(-50%);
}
