/* pages/search/search.wxss */
view{
  box-sizing: border-box;
}

.search-view{
    width: 750rpx;
    height: 80rpx;
    background: #006d4a;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:0 20rpx;
}

.search-view .search{
    width: 597rpx;
    height: 54rpx;
    display: block;
    background:#fff;
    border-radius: 6rpx;
    font-size: 27rpx;
    line-height: 54rpx;
    padding-left: 20rpx;
    color: #999;
    border:none;
    background-size: 100% 100%;
    display: flex;
    align-items: center;
}

.search::before{
    content:' ';
    display: block;
    width: 28rpx;
    height: 28rpx;
    background: url('data:image/png;base64,');
    background-size: 100% 100%;
    margin-right: 10rpx;
}

.search-view text{
    color: #fff;
    font-size: 28rpx;
    display: inline-block;
    margin-right: 16rpx;
}

/* 老师列表 */
.seach-rule{
    width: 100%;
}

.item{
    position: relative;
    background-image: url('data:image/png;base64,');
    background-size: 23rpx 43rpx;
    background-position: 700rpx center;
    background-repeat: no-repeat;
}

.nav-tip{
    width: 750rpx;
    height: 88rpx;
    font-size: 28rpx;
    padding: 0 20rpx;
    line-height: 88rpx;
    background: #f1f1f1;
    color: #666;
}

.seach-rule .item{
    display: flex;
    padding:20rpx;
}

.avatar{
    width: 155rpx;
    height: 155rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20rpx;
    border:1px solid #bdaa92;
}

.avatar image{
    display: block;
    width: 100%;
}

.item .nickname{
    color: #666;
    margin: 20rpx 0;
}

.item .nickname text{
   display: inline-block;
   font-size: 26rpx;
   margin-left: 30rpx;
   color: #666;
}

.item .teach-tip{
    font-size: #aaaaaa;
    font-size: 28rpx;
}

.item::after{
    content: '';
    display: block;
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    border-bottom: 1px solid #f7f7f7;
}