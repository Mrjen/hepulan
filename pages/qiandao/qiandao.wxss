.calendarSign{
  width: 750rpx;
  min-height: 456rpx;
  box-sizing: border-box;
  padding-top: 84rpx;
  text-align: center;
  color: #fff;
  line-height: 1;
  background-image: url(https://qncdn.playonwechat.com/hupulan/DiaryMarkbg-dk.jpg);
  background-size: 100% 100%;
}

.persion_name{
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.persion_tip{
  font-size: 30rpx;
  color: #ff9393;
}

.check_box{
  display: flex;
  margin-top: 64rpx;
  justify-content: space-between;
}

.persion_info .avatar_img{
  display: block;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin:0 auto;
  margin-bottom: 32rpx;
}

.calendar_out{
  width: 700rpx;
  height: 724rpx;
  margin:0 auto;
  position: relative;
  background-color: #52aeed;
  border-radius: 10px;
  box-shadow: 0 3px #145b89;
  box-sizing: border-box;
  padding-top: 34rpx;
  margin-top: -60rpx;
}

.checkBtn{
  width: 206rpx;
  height: 206rpx;
  border-radius: 50%;
  cursor: pointer;
  outline: none;
  outline-color: transparent;
  color:#fff;
  text-align: center;
  line-height: 62rpx;
  margin:0 auto;
  background-image: url(https://qncdn.playonwechat.com/hupulan/DiaryMarkicon-btn-dk.png);
  background-size: 100% 100%;
  background-position: 50% 50%;
  -webkit-box-shadow: 0 1px 8px 2px rgba(0,0,0,0.4);
}

.checkedBtn{
  width: 206rpx;
  height: 206rpx;
  border-radius: 50%;
  cursor: pointer;
  outline: none;
  outline-color: transparent;
  color:#fff;
  text-align: center;
  line-height: 62rpx;
  margin:0 auto;
  background-image: url(https://qncdn.playonwechat.com/hupulan/DiaryMarkicon-btn-ydk.png);
  background-size: 100% 100%;
  background-position: 50% 50%;
  -webkit-box-shadow: 0 1px 8px 2px rgba(0,0,0,0.4);
}

.formSubmit{
  display: block;
}

.gold_store{
  width: 70rpx;
  height: 70rpx;
  background: -webkit-linear-gradient(-90deg, #10ca98 0, #0ba178 100%);
  background: linear-gradient(180deg, #10ca98 0, #0ba178 100%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 30rpx;
  margin-top: -30rpx;
}

.gold_store image{
  display: block;
  width: 44rpx;
  height: 42rpx;
}

.check_box_left{
  flex: 1;
  text-align: center;
}

.check_box_left view:nth-of-type(2){
  color: #959595;
}

.check_box_right view:nth-of-type(2){
  color: #959595;
}

.calendar_box{
  width: 650rpx;
  height: 586rpx;
  margin:0 auto;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding:0 20rpx;
  background: #fff;
}

.check_box_right{
  flex: 1;
  text-align: center;
}

.time {
  padding: 24rpx 20rpx;
  text-align: right;
  width: 650rpx;
  font-size: 36rpx;
}

.weekName {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 16rpx 0; 
  box-sizing: border-box;
}

.weekName view {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #bef29c;
  text-align: center;
}

.week {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.week view {
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
  margin-left: 3rpx;
  line-height: 80rpx;
  display: inline-flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  color: #888;
}

.data_text{
  background-image:url(https://qncdn.playonwechat.com/icon-wmark.png);
  background-size: 90% 90%;
  background-repeat: no-repeat;
}

.week view text {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  color: #999;
}

.week .checked {
  color:#365742;
  background-size: 100% 100%;
  background-image:url('data:image/png;base64,');
}

.t_red{
  color: red;
}

.t_blue{
  color: royalblue;
}

.time view{
  flex: 1;
  font-size: 30rpx;

}
.time view text{
  font-size: 38rpx;
}

.sunday,.saturday{
  color: red;
}

.helpCoins{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  color: #999;
  border:1px solid #999;
  line-height: 34rpx;
  text-align: center;
  border-radius: 50%;
  vertical-align: top;
  margin-left: 10rpx;
}

/*弹窗*/
.help_win{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.help_win_in{
  width: 608rpx;
  height: 708rpx;
  background: #fff;
  border-radius: 6rpx;
}

.help_title{
  background: #75c0ac;
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  border-radius: 6rpx 6rpx 0 0;
  position: relative;
  margin-bottom: 44rpx;
}

.help_title .close_help{
  display: block;
  position: absolute;
  content: "";
  width: 60rpx;
  height: 60rpx;
  background-size: 30rpx 30rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-image:url('data:image/png;base64,');
  right:10rpx;
  top:20rpx;
}

.help_content{
  width: 520rpx;
  margin:0 auto;
  font-size: 31rpx;
  line-height: 50rpx;
  text-align: justify;
}

.help_content view{
  display: flex;
  margin-bottom: 72rpx;
}

.help_content view:before{
  content: "";
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #75c0ac;
  flex-shrink: 0;
  margin-top: 13rpx;
  margin-right: 14rpx;
  vertical-align: middle;
}
