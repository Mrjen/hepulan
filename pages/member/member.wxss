@import "../template/template.wxss";
.container {
    background-color: #f4f7f5;
    position: absolute;
    width: 100%;
    height: 100%;
}
.member_bg {
    width: 100%;
}
.member_bg image {
    width: 750rpx;
    height: 1590rpx;
}
.member_btns {
    padding-bottom: 120rpx;
}
.member_btns button {
    width: 214rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
}

.applyWin{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  left: 0;
  top: 0;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
}

.applyIn{
  width: 580rpx;
  height: 314rpx;
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding:20rpx 40rpx;
  text-align: center;
}

.winTitle{
  margin:30rpx;
}

.applyTip,.teacherCode{
  font-size: 30rpx;
}

.closeWin{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border:1px solid #fff;
}

.teacherCode{
  margin:20rpx 0;
  text-align: center;
  display: inline-block;
  padding: 10rpx 20rpx;
  background: #365742;
  color:#fff;
}


.closeWin{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border:1px solid #000;
  position: absolute;
  right: 115rpx;
}

.closeWin:before{
  content: "";
  display: block;
  width: 40rpx;
  height: 2rpx;
  background: #000;
  transform: rotate(45deg);
  position: absolute;
  margin-top: -2rpx;
  top: 50%;
  left: 50%;
  margin-left: -18rpx;
}

.closeWin:after{
  content: "";
  display: block;
  width: 40rpx;
  height: 2rpx;
  background: #000;
  transform: rotate(-45deg);
  top: 50%;
  left: 50%;
  margin-left: -18rpx;
  margin-top: -2rpx;
  position: absolute;
}

.taacher_btn{
  width: 220rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border:1px solid #666;
  margin:0 auto;
}
