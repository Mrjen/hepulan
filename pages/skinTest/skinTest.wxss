/* pages/skinTest/skinTest.wxss */

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-self: center;
  font-size: 34rpx;
  line-height: 1.4;
}

.question_box {
  width: 580rpx;
  background: rgba(255, 255, 255, .5);
  box-sizing: border-box;
  padding: 50rpx 30rpx;
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  margin-left: -290rpx;
  top: 210rpx;
}

.fac_item {
  display: flex;
  padding: 20rpx 0;
  box-sizing: border-box;
  vertical-align: top;
}

.fac_item radio{
  color: red;
  margin-right: 30rpx;
}

.op_btn {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  border-radius: 50%;
  vertical-align: middle;
  border: 1px solid #782f3f;
}

.body_bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.body_bg image {
  display: block;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.ques_show {
  display: none;
}

.active:before {
  content: "";
  display: block;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: red;
  position: absolute;
  margin-left: -45rpx;
  margin-top: 10rpx;
}

.page_title {
  width: 188rpx;
  height: 45rpx;
  position: absolute;
  top: 150rpx;
  left: 50%;
  margin-left: -94rpx;
}

.page_title image {
  width: 188rpx;
  height: 45rpx;
  display: block;
  margin: 0 auto;
}
