/* pages/skinTest/skinTest.wxss */
view{
  box-sizing: border-box;
}

page{
  background:#f3f2f8;
}

.top_nav{
  width: 100%;
  height: 380rpx;
  background-image: url(https://qncdn.playonwechat.com/hepulan/skin_test_topnav_bg.png);
  background-size: 100% 100%;
  color: #fff;
  padding:100rpx 80rpx;
  margin-bottom: 32rpx;
}

.top_nav view:nth-of-type(1){
  font-size: 38rpx;
  margin-bottom: 30rpx;
}

.top_nav view:nth-of-type(2){
  font-size: 24rpx;
  line-height: 40rpx;
}

.test_type{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.test_item image{
  display: block;
  width: 105rpx;
  height: 105rpx;
  margin:0 auto;
  margin-bottom: 20rpx;
  margin-top: 54rpx;
}

.test_item{
  width: 338rpx;
  height: 378rpx;
  background:#fff;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  position: relative;
}

.test_item:nth-of-type(2n){
  margin-right: 0;
}

.item_title{
  font-size: 26rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.skin_type{
  font-size: 20rpx;
}

.test_type .test_item:nth-of-type(1) .item_title:before{
   content: "";
   display: block;
   width: 40rpx;
   height: 5rpx;
   background:#b0ebff;
   position: absolute;
   left:50%;
   transform: translateX(-50%);
   bottom: -10rpx;
}

.test_type .test_item:nth-of-type(2) .item_title:before{
   content: "";
   display: block;
   width: 40rpx;
   height: 5rpx;
   background:#58b17e;
   position: absolute;
   left:50%;
   transform: translateX(-50%);
   bottom: -10rpx;
}

.test_type .test_item:nth-of-type(3) .item_title:before{
   content: "";
   display: block;
   width: 40rpx;
   height: 5rpx;
   background:#58b17e;
   position: absolute;
   left:50%;
   transform: translateX(-50%);
   bottom: -10rpx;
}

.test_type .test_item:nth-of-type(4) .item_title:before{
   content: "";
   display: block;
   width: 40rpx;
   height: 5rpx;
   background:#ffd800;
   position: absolute;
   left:50%;
   transform: translateX(-50%);
   bottom: -10rpx;
}

.see_btn{
    width: 168rpx;
    height: 168rpx;
    border-radius: 50%;
    background:#cccccc;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 270rpx;
    top: 700rpx;
    border:20rpx solid #f3f2f8;
    box-sizing: content-box;
}

.see_btn_success{
  background:#006d4a;
  color:#fff;
}

/*弹窗*/
.test_win{
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.3);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
}

.win_in{
  position: relative;
  width: 634rpx;
  min-height: 300rpx;
  background: #fff;
  border-radius: 32rpx;
  border:2px solid #eeeeee;
}

.colse_btn{
  width: 68rpx;
  height: 69rpx;
  border:2px solid #eeeeee;
  border-radius: 50%;
  background:#fff;
  background-image:url('data:image/png;base64,');
  background-size: 31rpx 31rpx;
  background-position: center;
  background-repeat: no-repeat;
  position: absolute;
  right: -16rpx;
  top: -16rpx;
  z-index: 10;
}

.win_icon{
  width: 190rpx;
  height: 190rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%,-40%);
  overflow: hidden;
}

.win_title{
  font-size: 52rpx;
  text-align: center;
  padding-top: 120rpx;
  position: relative;
}

.win_title:before{
  display: block;
  content: "";
  width: 120rpx;
  height: 10rpx;
  background-color: currentColor;
  position: absolute;
  left: 50%;
  bottom: -26rpx;
  transform: translateX(-50%);
}

.discribe{
  padding:50rpx;
  font-size: 26rpx;
  line-height: 44rpx;
}

.test_btn{
   width: 424rpx;
   height: 76rpx;
   text-align: center;
   line-height: 76rpx;
   color: #fff;
   margin:0 auto;
   border-radius:20rpx;
   margin-bottom: 80rpx;
}