/*轮播列表*/
.swiper{
   width: 100%;
   height: 80rpx;
   background: #83dab0;
   color: #fff;
}

.swiper swiper{
  width: 100%;
  height: 100%;
}

.swiper swiper swiper-item{
   display: block;
   width: 100%;
   height: 100%;
}

.text_item{
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}

/*商品列表*/
.shop_list{
  background: #fff;
}

.item_img{
  width: 242rpx;
  height: 154rpx;
  display: block;
  border-radius: 12rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.list_item{
  display: flex;
  padding:20rpx;
  position: relative;
}

.list_item::before{
  content: " ";
  display: block;
  width: 100%;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  transform: scaleY(.5);
  transform-origin: 0 0;
}

.item_title{
  width: 100%;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.item_jifen{
  font-size: 28rpx;
  color: #ff3c3c;
  width: 200rpx;
  margin-bottom: 20rpx;
}

.item_zan{
  font-size: 26rpx;
  color: #3e3e3e;
  align-self: flex-end;
  display: flex;
  align-items: center;
}

.zan_icon{
  display: block;
  width: 26rpx;
  height: 23rpx;
  background: url(https://qncdn.playonwechat.com/hepulan/point_mall_hert.png);
  background-size: 100% 100%;
  margin-left: 10rpx;
}

.soon_tip{
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.item_info{
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 438rpx;
}

.item_bottom{
  display: flex;
  justify-content: space-between;
}

.exchange_num{
  font-size: 26rpx;
  color: #434343;
  margin-bottom: 10rpx;
  text-align: center;
}

.zan_hert{
  display: block;
  width: 48rpx;
  height: 48rpx;
  background: #ff8400;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 20rpx;
  top:20rpx;
}

.zan_box{
   background: transparent;
}

.zan_hert image{
  width: 27rpx;
  height: 24rpx;
}

.exchange_btn{
  width: 150rpx;
  height: 48rpx;
  border-radius: 30rpx;
  background: #ff3c3c;
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #fff;
  position: relative;
}

.zan_num{
  margin-top: 60rpx;
  background:#f7f7f7;
  border-radius: 4rpx;
}

.zan_num .text_bg{
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 2;
}

.zan_num .text_precent{
    display: block;
    height: 100%;
    background:#ff3c3c;
    position: absolute;
    border-radius: 4rpx;
    z-index: 1;
}

.has_exchange_btn{
  background: #999;
}

.exchange_box{
   display: flex;
   flex-direction: column;
   align-items: flex-end;
}

.item_type{
  font-size: 28rpx;
  width: 200rpx;
  margin-bottom: 30rpx;
}

.has_salse:after{
   content: "";
   width:242rpx;
   height:154rpx;
   position: absolute;
   background: url(https://qncdn.playonwechat.com/hepulan/point_shop_outsale.png);
   background-size: 140rpx 140rpx;
   background-position: center;
   background-repeat: no-repeat;
   background-color:rgba(0,0,0,.2);
   left: 20rpx;
   top: 20rpx;
   border-radius: 12rpx;
}

/* 选择款 */
.select_win{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
}

.product_info{
  width: 100%;
  height: 680rpx;
  background: #fff;
  padding-top: 40rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product image{
  display: block;
  width: 240rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.product{
  display: flex;

}

.top_info{
  padding:0 30rpx;
  box-sizing: border-box;
}

.product .info view:nth-of-type(1){
   font-size: 30rpx;
   color: #48a86c;
   margin-bottom: 14rpx;
}

.product .info view:nth-of-type(2){
   font-size: 30rpx;
   margin-bottom: 14rpx;
}

.product .info view:nth-of-type(3){
   font-size: 30rpx;
}

.type_tag{
  display: block;
  font-size: 32rpx;
  padding:20rpx 0;
  width: 750rpx;
}

.product_type .type_item{
  width: 194rpx;
  height: 48rpx;
  border:1px solid #efefef;
  font-size: 24rpx;
  text-align: center;
  line-height: 48rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.product_type .type_item.type_active{
  border:1px solid #48a86c;
}

.product_type{
  display: flex;
  width: 750rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.sure_type{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background: #48a86c;
  color: #fff;
}


.close_select{
  color: #000;
  position: absolute;
  margin-top: 0;
  margin-left: 0;
  right: 40rpx;
  top: 40rpx;
  width: 21px;
  height: 21px;
}

.close_select:before {
  content: '';
  position: absolute;
  top: 10px;
  width: 21px;
  height: 1px;
  background-color: currentColor;
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
}
.close_select:after {
  content: '';
  position: absolute;
  top: 10px;
  width: 21px;
  height: 1px;
  background-color: currentColor;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}


/*列表标题*/
.nav_tip{
  width: 100%;
  text-align: center;
  padding: 20rpx;
  font-size: 32rpx;
  border-top: 20rpx solid #f7f7f7;
  background: #fff;
  position: relative;
  display: flex;
  justify-content: center;
  align-items:center;
  box-sizing: border-box;
}

.nav_tip image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  position: relative;
  overflow: auto;
}

.nav_tip .line{
  display: block;
  width: 80rpx;
  height: 1px;
  background:#444;
  margin:0 20rpx;
}

