/* pages/pointMall/pointMall.wxss */
page{
   background: #f4f5f9;
   background-image: url(https://qncdn.playonwechat.com/hupulan/shopMall/point_mall_bg.png);
   background-size: 750rpx 468rpx;
   background-repeat: no-repeat;
}

.avatarUrl{
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  display: block;
  margin:0 auto;
  margin-top: 120rpx;
}

.nickName{
  text-align: center;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.point_count{
  text-align: center;
  font-size: 32rpx;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.point_detail{
  width: 382rpx;
  height: 66rpx;
  margin:0 auto;
  line-height: 66rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.opation_nav{
  display: flex;
  border-top: 20rpx solid #f4f5f9;
}

.opation_nav navigator{
  display: flex;
  flex: 1;
  align-items: center;
  height: 122rpx;
  background: #fff;
  justify-content: center;
  position: relative;
  font-size: 30rpx;
}

.opation_nav navigator:nth-of-type(1)::before{
  content: " ";
  position: absolute;
  height: 40rpx;
  right: 0;
  top: 50%;
  margin-top: -20rpx;
  border-right: 1px solid #333;
}

.opation_nav navigator:nth-of-type(2)::before{
  content: " ";
  position: absolute;
  height: 40rpx;
  right: 0;
  top: 50%;
  margin-top: -20rpx;
  border-right: 1px solid #333;
}

.opation_nav navigator text{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.opation_nav navigator:nth-of-type(1) text{
   background-image: url(https://qncdn.playonwechat.com/hupulan/shopMall/point_mall_collect.png);
   background-size: 100%;
}

.opation_nav navigator:nth-of-type(2) text{
   background-image: url(https://qncdn.playonwechat.com/hupulan/shopMall/point_mall_shopcar.png);
   background-size: 100%;
}

.opation_nav navigator:nth-of-type(3) text{
   background-image: url(https://qncdn.playonwechat.com/hupulan/shopMall/point_mall_adress.png);
   background-size: 100%;
}

/*商品列表*/
.shop_list{
  background: #fff;
}

.item_img{
  width: 242rpx;
  height: 154rpx;
  display: block;
  border-radius: 12rpx;
  margin-right: 30rpx;
}

.list_item{
  display: flex;
  padding: 0 20rpx;
  position: relative;
  height: 200rpx;
  align-items: center;
}

.list_item::before{
  content: " ";
  display: block;
  width: 100%;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  transform: scaleY(.5);
  transform-origin: 0 0;
}

.item_title{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.item_jifen{
  font-size: 28rpx;
  color: #ff3c3c;
  width: 200rpx;
}

.item_zan{
  font-size: 26rpx;
  color: #3e3e3e;
  align-self: flex-end;
  display: flex;
  align-items: center;
}

.item_info{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item_bottom{
  display: flex;
  justify-content: space-between;
}

.exchange_num{
  font-size: 26rpx;
  color: #434343;
  margin-bottom: 10rpx;
  text-align: center;
}

.exchange_btn{
  width: 150rpx;
  height: 48rpx;
  border-radius: 30rpx;
  background: #ff3c3c;
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #fff;
}

.exchange_box{
  margin-top: -68rpx;
}

.item_type{
  font-size: 28rpx;
  width: 200rpx;
  margin-bottom: 30rpx;
}
