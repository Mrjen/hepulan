/* pages/pointMall/pointMall.wxss */
@import "../template/template.wxss";

view{
  box-sizing: border-box;
}

page{
   background: #f4f5f9;
   background-image: url(https://qncdn.playonwechat.com/hepulan/point_mall_topbg.png);
   background-size: 750rpx 476rpx;
   background-repeat: no-repeat;
}

.avatarUrl{
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  display: block;
  margin:0 auto;
  margin-top: 120rpx;
}

.nickName{
  text-align: center;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.point_count{
  text-align: center;
  font-size: 32rpx;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.point_detail{
  width: 280rpx;
  height: 62rpx;
  margin:0 auto;
  box-sizing: content-box;
  border:6rpx solid rgba(255,255,255,.9);
  background: #83dab0;
  border-radius: 40rpx;
  line-height: 58rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  margin-top: 18rpx;
  margin-bottom: 10rpx;
}

.invate{
  font-size: 26rpx;
  text-align: center;
}

.opation_nav{
  display: flex;
  border-top: 20rpx solid #f4f5f9;
}

.opation_nav .navigator{
  display: flex;
  flex: 1;
  align-items: center;
  height: 122rpx;
  background: #fff;
  justify-content: center;
  position: relative;
  font-size: 30rpx;
}

.opation_nav .navigator:nth-of-type(1)::before{
  content: " ";
  position: absolute;
  height: 40rpx;
  right: 0;
  top: 50%;
  margin-top: -20rpx;
  border-right: 1px solid #333;
}

.opation_nav .navigator:nth-of-type(2)::before{
  content: " ";
  position: absolute;
  height: 40rpx;
  right: 0;
  top: 50%;
  margin-top: -20rpx;
  border-right: 1px solid #333;
}

.opation_nav .navigator text{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

