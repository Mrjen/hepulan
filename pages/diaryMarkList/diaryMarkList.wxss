/* pages/diaryMarkList/diaryMarkList.wxss */
page{
	background:#f7f7f7;
}

.logo_box{
	width: 100%;
	height: 220rpx;
	background:#2a6148;
	display: flex;
	justify-content: center;
	align-items: center;
}

.logo_box image{
	display: block;
	width: 245rpx;
	height: 140rpx;
	margin:0 auto;
	position: relative;
}

.diar_tip{
	height: 70rpx;
	width: 100%;
	background: #2a6148;
	border-top: 6rpx solid #fff;
	text-align: center;
	line-height: 70rpx;
	font-size: 30rpx;
	color: #fff;
}
.avatar{
	position: relative;
}

.avatar image{
	width: 110rpx;
	height: 110rpx;
	position: absolute;
	display: block;
	right: 40rpx;
	top: -80rpx;
	border:1px solid #fff;
}

.item{
	width: 100%;
	box-sizing: border-box;
	padding:20rpx;
	display: flex;
	font-size: 28rpx;
	background:#fff;
	box-shadow: 0 0 8rpx rgba(0,0,0,.1);
	margin-bottom: 30rpx;
}

.item .item_left{
	display: flex;
	/*align-items: baseline;*/
	margin-right: 30rpx;
}

.item .item_left view:nth-of-type(1){
	font-size: 50rpx;
	font-weight: bold;
}

.item .item_left view:nth-of-type(2){
	font-size: 30rpx;
	font-weight: bold;
	margin-left: -10rpx;
	padding-top: 60rpx;
	flex-shrink: 0;
}

.item_right{
	box-sizing: border-box;
	padding-left: 30rpx;
}

.diary_text{
	margin-top: 10rpx;
}

.img_box{
	display: flex;
	flex-wrap: wrap;
}

.img_box image{
   display:block;
   width: 172rpx;
   height: 172rpx;
   margin:5rpx;
}