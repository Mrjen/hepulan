.like_persion{
	font-size: 28rpx;
	text-overflow: ellipsis;
	-webkit-line-clamp: 2;
	overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  box-sizing: border-box;
  line-height: 1.8;
	padding-left: 15rpx;
  background:#f4f4f4;
}

.like_persion .like_item{
	display: inline-block;
	margin-right: 10rpx;
}

.write_dyn{
